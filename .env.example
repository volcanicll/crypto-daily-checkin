# ============================================
# 环境变量配置模板
# 复制此文件为 .env 并填写实际值
# ============================================

# ---------- 签到服务 ----------

# CoinGecko 签到配置
COINGECKO_COOKIE=your_coingecko_cookie
COINGECKO_TOKEN=your_coingecko_token

# CoinMarketCap 签到配置
COINMARKET_COOKIE=your_coinmarket_cookie
COINMARKET_TOKEN=your_coinmarket_token

# ---------- 通知服务 ----------

# 企业微信应用消息（可选）
WX_COMPANY_ID=your_company_id
WX_APP_ID=your_app_id
WX_APP_SECRET=your_app_secret

# 企业微信群机器人
BOT_KEY=your_bot_key

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# 钉钉群机器人（加签方式）
DINGTALK_ACCESS_TOKEN=your_dingtalk_access_token
DINGTALK_SECRET=your_dingtalk_secret

# ---------- LLM 锐评功能 ----------

# LLM API 配置 (支持 OpenRouter / OpenAI 等兼容格式)
LLM_API_KEY=your_llm_api_key
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=openai/gpt-4o-mini

# ---------- 模块开关 ----------

# 内容模块 (true=启用, false=禁用, 不设置=使用默认值)
MODULE_GOLD=true           # 金价模块 (默认启用)
MODULE_CRYPTO=true         # 加密货币模块 (默认启用)
MODULE_AI_NEWS=true        # AI 资讯模块 (默认启用)
MODULE_LLM_COMMENTARY=true # LLM 锐评模块 (默认启用)
MODULE_WEATHER=false       # 天气模块 (默认禁用)
MODULE_QUOTE=false         # 情话/一言模块 (默认禁用)

# 通知服务开关
NOTIFY_TELEGRAM=true       # Telegram 通知 (默认启用)
NOTIFY_DINGTALK=true       # 钉钉通知 (默认启用)
NOTIFY_WX_BOT=false        # 企业微信群机器人 (默认禁用)
NOTIFY_WX_APP=false        # 企业微信应用消息 (默认禁用)